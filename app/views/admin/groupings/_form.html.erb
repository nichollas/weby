<%= simple_form_for [:admin, @grouping], html: { class: 'form-horizontal' } do |f| %>
  <%= f.show_errors %>

  <%= f.input :name  %>
  <%= f.association :sites, labelmethod: :title, input_html: {class: 'select2 site-groupings'} %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn btn-default" %>
  </div>
  <% content_for :javascripts do %>
    <% javascript_tag do %>
    $(function (){

     $('.site-groupings').select2({
         width: 'resolve'
     });

  });
  <% end %>
  <% end %>
<% end %>
