<%= simple_form_for [:admin, @notification], html: { class: 'form-horizontal' } do |f| %>
  <%= f.show_errors %>
  <%= f.input :title %>
  <%= f.input :body,
    :input_html => {class: "mceSimple", style: "width: 550px; height: 280px;"},
    :as => :text,
    :required => false %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary', disable_with: t("please_wait") %>
    <%= link_to t("back"), :back, class: "btn btn-default" %>
  </div>
<% end %>
<%= content_for :javascripts, javascript_include_tag("tinymce") %>
