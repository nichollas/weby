<div class="pull-left">
  <%= form_tag admin_users_path, method: 'get', autocapitalize: "off", class: 'pull-left' do %>
    <%= content_tag :div, class: 'input-append' do %>
      <%= search_field_tag :search, params[:search], class: 'input-search' %><%= submit_tag t("search"), class: 'btn btn-default btn-info btn-search' %>
    <% end %>
  <% end %>
</div>
<p class="pull-right">
  <% if current_user.is_admin? %>
    <%= link_to t(".new_user"), new_admin_user_path, class: "btn btn-default btn-success" %>
  <% end %>
  <% if check_permission(Admin::UsersController, :change_roles) %>
    <%= link_to t('.roles_permissions'), admin_roles_path, class: "btn btn-default" %>
  <% end %>
</p>
<div class="clearfix"></div>

<div id="list">
  <%= render :partial => "list" %>
</div>
