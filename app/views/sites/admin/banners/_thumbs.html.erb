<%= render 'view_picker' %>
<div class="pull-left"><%= info_page @banners %></div>
<div class="pull-right"><%= paginate @banners, :remote => true %></div>
<div class="clearfix"></div>

<ul class="clear thumbnails">
  <% @banners.each do |banner| %>
    <li class="col-lg-2 col-md-2 col-sm-2">
      <div class="thumbnail">
        <%= weby_file_view(banner.repository, :thumb, 160, nil, {target: '_blank', title: banner.text}, true) %>
        <div class="caption">
          <p style="overflow: hidden; white-space: nowrap; height: 20px; text-overflow: ellipsis;"><%= banner.title %></p>
          <p>Publicado: <%= publication_status(banner) %></p>
          <%= raw make_menu(banner) %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<div class="pull-left"><%= per_page_links @banners, true, :mini %></div>
<div class="pull-right"><%= paginate @banners, :remote => true %></div>
<div class="clearfix"></div>
